<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".Activities.UserActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/black">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/image_circular"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:outlineSpotShadowColor="@color/teal_200"
        android:textStyle="bold"
       android:layout_toRightOf="@+id/avatar"
        style="@android:style/TextAppearance"/>

    <TextView
        android:id="@+id/logIn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textStyle="italic"
        android:layout_below="@+id/avatar"
        style="@android:style/TextAppearance"/>
        <ImageView
         android:id="@+id/img_follower"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:background="@drawable/ic_group"
         android:layout_below="@id/logIn"
            android:layout_marginTop="5dp">
        </ImageView>


        <TextView
        android:id="@+id/followers"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textStyle="italic"
        android:layout_below="@id/logIn"
        android:layout_toRightOf="@id/img_follower"
        style="@android:style/TextAppearance"/>

    <TextView

        android:id="@+id/following"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textStyle="italic"
        android:layout_below="@id/followers"
        style="@android:style/TextAppearance"/>

        <ImageView
         android:id="@+id/img_email"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/ic_email"
         android:layout_below="@id/following"
         android:layout_marginTop="5dp"></ImageView>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:padding="5dp"
        android:textStyle="italic"
        android:layout_toRightOf="@id/img_email"
        android:layout_below="@id/following"
        style="@android:style/TextAppearance"/>

    <Button
        android:id="@+id/ownedReposBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Get Repositories"
        android:textSize="19sp"
        app:backgroundTint="@color/teal_200"
        android:textAllCaps="false"
        android:background="@drawable/btnstyle"
        android:layout_below="@id/email"
        android:padding="5dp"
        android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>